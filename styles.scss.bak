@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@800&display=swap');

/* Color Theme Swatches in RGBA */
$color-grey: rgba(133,142,154, 1);
$color-silver: rgba(205,202,195, 1);
$color-yellow: rgba(182,175,124, 1);
$color-green: rgba(20,54,0, 1);
$color-peach: rgba(186,163,151, 1);


// $color-grey: #5F6873;
// $color-yellow: #D9D16A;
// $color-brown: #8C5637;
// $color-red: #A6523F;
$color-white:#F2F2F2;

html, body, .navBar{display: flex; align-items: center;}


html, body {
    font-family: 'Open Sans', sans-serif;
    min-height: 3200px;
    min-width: 1920px;
    height: 100%;
    font-size:62.5%;
    padding:0;
    margin:0;
    overflow-x: hidden;
    flex-direction: column;
    > div
    {
        width: 1920px;
    }

  
}

.content{
    height:100%;
}

.navBar
{

    padding:0;
    margin:0;
    overflow:hidden;
    width:inherit;
    position: fixed;
    top:0px;
    z-index: 9999;
}

.logo{
    font-family: 'PALMSPRINGS PERSONAL USE';
    font-size: 8rem;
    padding-left: 15rem;

}

.navTabs { padding-left: 20rem;}

.navTabs a {
    font-size: 3rem;
    padding:3rem 2rem 3rem 2rem;
    user-select: none;
    cursor:pointer;
    &:hover{ box-shadow: inset 0 0 10rem 10rem rgba(0,0,0, 0.2);}
}


.backgroundImage
{
    height: 30%;
    box-sizing: border-box;
    background-size: 100%;
    box-shadow: inset 0 -15rem 15rem 0 rgba(0,0,0, 0.8);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;

}

.backgroundText
{

    font-size: 6rem;
    // width:%;
    padding-left: 15rem;
    margin-bottom: 7rem;
}

.mainContent{
    height:38%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr; 
    grid-template-rows: 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr; 
    gap: 0px 0px; 
    grid-template-areas: 
      ". . . . . . . . . . . . ."
      ". square-1 square-1 square-1 . square-2 square-2 square-2 . . . . ."
      ". square-1 square-1 square-1 . square-2 square-2 square-2 . rectangle-1 rectangle-1 rectangle-1 ."
      ". square-1 square-1 square-1 . square-2 square-2 square-2 . rectangle-1 rectangle-1 rectangle-1 ."
      ". . . . . . . . . rectangle-1 rectangle-1 rectangle-1 ."
      ". square-3 square-3 square-3 . square-4 square-4 square-4 . rectangle-1 rectangle-1 rectangle-1 ."
      ". square-3 square-3 square-3 . square-4 square-4 square-4 . rectangle-1 rectangle-1 rectangle-1 ."
      ". square-3 square-3 square-3 . square-4 square-4 square-4 . . . . ."
      ". . . . . . . . . . . . ."; 

    >div img{ box-shadow: inset 0 -15rem 15rem 0 rgba(0,0,0, 0.8);}
}
.square-1 { grid-area: square-1;  display: flex; align-items: center; justify-content: center; img{width: 97%;height: 97%;} cursor:pointer; &:hover{opacity:0.5}}
.square-3 { grid-area: square-3; display: flex; align-items: center; justify-content: center; img{width: 97%;height: 97%;}cursor:pointer;}
.square-2 { grid-area: square-2;display: flex; align-items: center; justify-content: center; img{width: 97%;height: 97%;}cursor:pointer;}
.square-4 { grid-area: square-4; display: flex; align-items: center; justify-content: center; img{width: 97%;height: 97%;}cursor:pointer;}
.rectangle-1 { grid-area: rectangle-1; display: flex; align-items: center; justify-content: center; img{width: 97%;height: 97%;}cursor:pointer;}